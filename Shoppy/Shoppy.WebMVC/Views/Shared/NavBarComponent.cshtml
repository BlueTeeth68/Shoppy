                        <div class="btn-group">
                        @if (isAuthenticated)
                        {
                            <a class="nav-link nav-icon-hover" id="drop2" data-bs-toggle="dropdown"
                               aria-expanded="false">
                                
                                <img src="@(pictureUrl ?? "/img/default/default_user_img.png")" alt="" width="35" height="35" class="rounded-circle" style="border: 1px solid grey"/>
                                <span class="text-dark ms-2">@fullName</span>
                            </a>
                            <div class="dropdown-menu dropdown-menu-end dropdown-menu-animate-up" aria-labelledby="drop2">
                                <div class="message-body">
                                    <div class="w-100 px-2">
                                        <a class="btn btn-outline-primary w-100 mt-2 d-block rounded-border-1"  asp-controller="Auth" asp-action="Logout">Log out</a>
                                    </div>
                                </div>
                            </div>
                        }
                        else
                        {
                            <a class=" nav-link nav-icon-hover text-dark" asp-controller="Auth" asp-action="Login">
