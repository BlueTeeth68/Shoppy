@model List<Shoppy.SharedLibrary.Models.Responses.Categories.CategoryDto>

@{
    var name = (string?)ViewBag.Name;
    var fullName = Context.Request.Cookies["fullName"];
    var accessToken = Context.Request.Cookies["accessToken"];
    var pictureUrl = Context.Request.Cookies["pictureUrl"];
    var cartTotalItem = (int?)ViewBag.CartTotalItem;
    var isAuthenticated = accessToken != null;
}

<!-- Navbar Start -->
<div class="container-fluid bg-light mb-3">
    <div class="row px-xl-5">
        <div class="col-lg-3 d-none d-lg-block">
            <a class="btn d-flex align-items-center justify-content-between w-100" data-toggle="collapse" href="#navbar-vertical" style="height: 65px; padding: 0 30px;">
                <h6 class="text-dark m-0"><i class="fa fa-bars mr-2"></i>Categories</h6>
                <i class="fa fa-angle-down text-dark"></i>
            </a>
            <nav class="collapse position-absolute navbar navbar-vertical navbar-light align-items-start p-0 bg-light" id="navbar-vertical" style="width: calc(100% - 30px); z-index: 999;">
                <div class="navbar-nav w-100">
                    @foreach (var category in Model)
                    {
                        <a asp-controller="Home" asp-action="Index" class="nav-item nav-link"
                           asp-route-categoryId="@category.Id"
                           asp-route-name="@name">
                            @category.Name
                        </a>
                    }
                </div>
            </nav>
        </div>
        <div class="col-lg-9">
            <nav class="navbar navbar-expand-lg navbar-dark py-3 py-lg-0 px-0">
                <a asp-controller="Home" asp-action="Index" class="text-decoration-none d-block d-lg-none">
                    <h2 class="text-uppercase text-primary fw-bold ">Shoppy</h2>
                </a>
                <button type="button" class="navbar-toggler text-dark" data-toggle="collapse" data-target="#navbarCollapse">
                    <i class="fa-solid fa-bars"></i>
                </button>
                <div class="collapse navbar-collapse justify-content-between" id="navbarCollapse">
                    <div class="navbar-nav mr-auto py-0">
                        <a asp-action="Index" asp-controller="Home" class="nav-item nav-link nav-link-header @Html.Raw(ViewBag.Active == 1 ? "active" : "")">Home</a>
                        <a asp-controller="Order" asp-action="Index" class="nav-item nav-link nav-link-header @Html.Raw(ViewBag.Active == 5 ? "active" : "")">Purchase history</a>

                    </div>
                    <div class="navbar-nav ml-auto py-0 d-none d-lg-block">
                        <a class="btn px-0 me-3" asp-controller="Cart" asp-action="Index">
                            <i class="fas fa-shopping-cart text-primary"></i>
                            <span class="badge border border-primary rounded-circle cart-total-item text-primary px-0 py-0" style="width: 20px; height: 20px;">@(cartTotalItem ?? 0)</span>
                        </a>
