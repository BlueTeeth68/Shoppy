                        @*                     <a asp-controller="Auth" asp-action="Login">My Account</a> *@
                        @*                 </button> *@
                        @*                 <button class="dropdown-item" type="button"> *@
                        @*                     <a asp-controller="Auth" asp-action="Logout">Log out</a> *@
                        @*                 </button> *@
