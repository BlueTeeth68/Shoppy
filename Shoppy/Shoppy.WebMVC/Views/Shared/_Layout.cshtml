@using Microsoft.AspNetCore.Mvc.TagHelpers
@using Shoppy.SharedLibrary.Models.Responses.Categories
@{
    var listCategory = (List<CategoryDto>)ViewBag.Categories;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>Shoppy - @ViewData["Title"]</title>

    <!-- Favicon -->
    <link href="img/favicon.ico" rel="icon" asp-append-version="true">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.gstatic.com" asp-append-version="true">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet" asp-append-version="true">

    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" rel="stylesheet" asp-append-version="true">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous" asp-append-version="true">

    <!-- Libraries Stylesheet -->
    <link href="lib/animate/animate.min.css" rel="stylesheet" asp-append-version="true">
    <link href="lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet" asp-append-version="true">

    <!-- Customized Bootstrap Stylesheet -->
    <link href="~/css/style.css" rel="stylesheet" asp-append-version="true"/>
    
    <link href="~/css/mordernize/styles.css" rel="stylesheet" asp-append-version="true"/>

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>

    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>

    @await RenderSectionAsync("metadata", required: false)

</head>
<body>

<!-- Topbar Start -->
@await Html.PartialAsync("Header")
<!-- Topbar End -->

@{
    if (listCategory != null)
    {
        @await Html.PartialAsync("~/Views/Shared/NavBarComponent.cshtml", listCategory);
    }
}


@RenderBody()

<!-- Footer Start -->
@await Html.PartialAsync("Footer")
<!-- Footer End -->

<!-- Back to Top -->
<a href="#" class="btn btn-primary back-to-top">
    <i class="fa fa-angle-double-up"></i>
</a>

<!-- JavaScript Libraries -->


<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.bundle.min.js"></script>

<script crossorigin="anonymous" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
<script src="lib/easing/easing.min.js"></script>
<script src="lib/owlcarousel/owl.carousel.min.js"></script>

<script src="~/js/site.js" asp-append-version="true"></script>

@await RenderSectionAsync("Scripts", required: false)
</body>
</html>