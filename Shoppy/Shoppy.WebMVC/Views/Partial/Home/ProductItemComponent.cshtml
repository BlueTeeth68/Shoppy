@model Shoppy.SharedLibrary.Models.Responses.Products.FilterProductResultDto;

<div class="col-lg-3 col-md-4 col-sm-6 pb-1 ">
    <div class="bg-light mb-4 card mx-3 product-item" >
        <div class="product-img position-relative overflow-hidden">

            <img class="img-fluid" src=@(Model.ProductThumbUrl ?? "~/img/product-1.jpg") alt="">

            <form asp-controller="Cart" id="@Model.Id">
                <div class="product-action">
                    <input type="hidden" name="productId" value="@Model.Id"/>
                    <button title="Add to cart" class="btn btn-outline-primary rounded-circle add-to-cart-btn rounded-button" type="submit" onclick="addToCart(event, '@Model.Id')">
                        <i class="fa fa-shopping-cart"></i>
                    </button>
                </div>
            </form>
        </div>
        <div class="text-center py-2 product-info">
            <a asp-controller="Books" asp-action="Detail" asp-route-id="@Model.Id" class="h6 text-decoration-none ">@Model.Name</a>

            <div class="d-flex align-items-center justify-content-center mb-1">
                @if (Model.AvgRate != null)
                {
                    @await Html.PartialAsync("~/Views/Partial/Rating/RatingStar.cshtml", Model.AvgRate ?? 0)
                }
            </div>
            <div class="d-flex align-items-center justify-content-center">
                <h5>$@Model.Price</h5>
            </div>

        </div>
    </div>
</div>