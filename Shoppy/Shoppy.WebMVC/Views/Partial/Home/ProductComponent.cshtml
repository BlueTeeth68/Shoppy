@model List<Shoppy.SharedLibrary.Models.Responses.Products.FilterProductResultDto>

@{
    var pageNumber = (int?)ViewBag.Page ?? 1;
    var size = (int?)ViewBag.Size ?? 8;
    var name = (string?)ViewBag.Name;
    var categoryId = (Guid?)ViewBag.CategoryId;
    var totalPage = (int?)ViewBag.TotalPage ?? 0;
    var sortName = (string?)ViewBag.SortName;
    var sortPrice = (string?)ViewBag.SortPrice;
}

<!-- Products Start -->
<div class="container-fluid pt-5 pb-3">
    <h2 class="section-title position-relative text-uppercase mx-xl-5 mb-4">
        <span class="bg-secondary pr-3">Featured Products</span>
    </h2>
    <div class="row px-xl-5">

        <div class="col-12 pb-1">
            <div class="d-flex align-items-center justify-content-end mb-4">

                <div class="ml-2">
                    <div class="btn-group">
                        <button type="button" class="btn btn-sm btn-light dropdown-toggle" data-toggle="dropdown">Sorting</button>
                        <div class="dropdown-menu dropdown-menu-right">
                            <a class="dropdown-item"
                               asp-controller="Home"
                               asp-action="Index"
                               asp-route-name="@name"
                               asp-route-categoryId="@categoryId"
                               asp-route-page="@pageNumber"
                               asp-route-size="@size"
                               asp-route-sortName="asc">
                                Name ascending
                            </a>
                            <a class="dropdown-item"
                               asp-controller="Home"
                               asp-action="Index"
                               asp-route-name="@name"
                               asp-route-categoryId="@categoryId"
                               asp-route-page="@pageNumber"
                               asp-route-size="@size"
                               asp-route-sortName="desc">
                                Name descending
                            </a>
                            <a class="dropdown-item"
                               asp-controller="Home"
                               asp-action="Index"
                               asp-route-name="@name"
                               asp-route-categoryId="@categoryId"
                               asp-route-page="@pageNumber"
                               asp-route-size="@size"
                               asp-route-sortPrice="asc">
                                Price ascending
                            </a>
                            <a class="dropdown-item"
                               asp-controller="Home"
                               asp-action="Index"
                               asp-route-name="@name"
                               asp-route-categoryId="@categoryId"
                               asp-route-page="@pageNumber"
                               asp-route-size="@size"
                               asp-route-sortPrice="desc">
                                Price descending
                            </a>
                        </div>
                    </div>
                    <div class="btn-group ml-2">
                        <button type="button" class="btn btn-sm btn-light dropdown-toggle" data-toggle="dropdown">Showing</button>
                        <div class="dropdown-menu dropdown-menu-right">
                            <a class="dropdown-item"
                               asp-controller="Home"
                               asp-action="Index"
                               asp-route-name="@name"
                               asp-route-categoryId="@categoryId"
                               asp-route-page="@pageNumber"
                               asp-route-size="8"
                               asp-route-sortName="@sortName"
                               asp-route-sortPrice="@sortPrice">
                                8
                            </a>
                            <a class="dropdown-item"
                               asp-controller="Home"
                               asp-action="Index"
                               asp-route-name="@name"
                               asp-route-categoryId="@categoryId"
                               asp-route-page="@pageNumber"
                               asp-route-size="16"
                               asp-route-sortName="@sortName"
                               asp-route-sortPrice="@sortPrice">
                                16
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        @foreach (var product in Model)
        {
            @await Html.PartialAsync("~/Views/Partial/Home/ProductItemComponent.cshtml", product)
        }

        <div class="col-12">
            <nav>
                <ul class="pagination justify-content-center">

                    <li class="page-item @(pageNumber <= 1 ? "disabled" : "")">
                        <a class="page-link" asp-controller="Home" asp-action="Index"
                           asp-route-name="@name"
                           asp-route-categoryId="@categoryId"
                           asp-route-page="@(pageNumber > 1 ? (pageNumber - 1) : 1)"
                           asp-route-size="@size"
                           asp-route-sortName="@sortName"
                           asp-route-sortPrice="@sortPrice"
                           aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                            <span class="sr-only">Previous</span>
                        </a>
                    </li>

                    @for (var i = 1; i <= totalPage; i++)
                    {
                        <li class="page-item @(pageNumber == i ? "active" : "")">

                            @{
                                var index = i;
                            }
                            <a class="page-link " asp-controller="Home" asp-action="Index"
                               asp-route-name="@name"
                               asp-route-categoryId="@categoryId"
                               asp-route-page="@index"
                               asp-route-size="@size"
                               asp-route-sortName="@sortName"
                               asp-route-sortPrice="@sortPrice">
                                @index
                            </a>
                        </li>
                    }

                    <li class="page-item @(pageNumber >= totalPage ? "disabled" : "")">
                        <a class="page-link" asp-controller="Home" asp-action="Index"
                           asp-route-name="@name"
                           asp-route-categoryId="@categoryId"
                           asp-route-page="@(pageNumber < totalPage ? (pageNumber + 1) : totalPage)"
                           asp-route-size="@size"
                           asp-route-sortName="@sortName"
                           asp-route-sortPrice="@sortPrice"
                           aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                            <span class="sr-only">Next</span>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
</div>
<!-- Products End -->