@model string

@{
    var orderId = (Guid)ViewBag.OrderId;
}

<!-- Button trigger modal -->
<div data-bs-toggle="modal" data-bs-target="#add_@Model">
    <button type="button" class="btn btn-primary">
        Write review
    </button>
</div>

<!-- Modal -->
<div class="modal fade" id="add_@Model" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Rate product</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form asp-controller="Order" method="post" asp-action="AddReview">
                <div class="modal-body">
                    @* Rate section *@
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="stars">
                                    <input class="star star-5" id="star-5_@(Model)" type="radio" name="rateValue" value="5"/>
                                    <label class="star star-5 fa-solid fa-star" for="star-5_@(Model)"></label>
                                    <input class="star star-4" id="star-4_@(Model)" type="radio" name="rateValue" value="4"/>
                                    <label class="star star-4 fa-solid fa-star" for="star-4_@(Model)"></label>
                                    <input class="star star-3" id="star-3_@(Model)" type="radio" name="rateValue" value="3"/>
                                    <label class="star star-3 fa-solid fa-star" for="star-3_@(Model)"></label>
                                    <input class="star star-2" id="star-2_@(Model)" type="radio" name="rateValue" value="2"/>
                                    <label class="star star-2 fa-solid fa-star" for="star-2_@(Model)"></label>
                                    <input class="star star-1 " id="star-1_@(Model)" type="radio" name="rateValue" value="1"/>
                                    <label class="star star-1 fa-solid fa-star" for="star-1_@(Model)"></label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="comment_@(Model)" class="col-form-label text-start">Comment:</label>
                        <textarea class="form-control" name="comment" id="comment_@(Model)"></textarea>
                    </div>

                    <input type="hidden" name="orderItemId" value="@Model"/>
                    <input type="hidden" name="orderId" value="@orderId"/>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>