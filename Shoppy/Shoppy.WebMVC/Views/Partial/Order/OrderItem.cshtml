@model Shoppy.SharedLibrary.Models.Responses.Orders.OrderQueryDto

<tr>
    <td class="align-middle">
        <a asp-controller="Order" asp-action="Detail" asp-route-id="@Model.Id" class="h6 text-decoration-none text-truncate">@Model.Id</a>
    </td>
    <td class="align-middle">@Model.Date</td>
    <td class="align-middle"><span class="badge rounded-pill bg-success">@Model.Status</span></td>
    <td class="align-middle">$@Model.TotalPrice</td>
</tr>