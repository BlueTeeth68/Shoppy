@model Shoppy.Domain.Repositories.Base.PagingResult<Shoppy.SharedLibrary.Models.Responses.Products.ProductRatingDto>

@{
    Layout = null;
}

<div class="row">
    <div class="col-md-6">
        <h4 class="mb-4" id="review-title">@Model.TotalRecords review</h4>

        @foreach (var item in Model.Results)
        {
            @await Html.PartialAsync("~/Views/Partial/Books/ReviewItem.cshtml", item)
        }

    </div>
</div>