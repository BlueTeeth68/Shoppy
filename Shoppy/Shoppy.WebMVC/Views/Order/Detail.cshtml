@using Shoppy.SharedLibrary.Models.Responses.Orders

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
    ViewBag.Active = 5;

    var order = (OrderDto)ViewBag.Order;
}

<div class="container-fluid container-body">
    <div class="row px-lg-5">
        <div class="table-responsive mb-5">
            <table class="table table-light table-borderless table-hover text-center mb-0">
                <thead class="thead-dark">
                <tr>
                    <th style="width:40%">Products</th>
                    <th style="width:20%">Price</th>
                    <th style="width:10%">Quantity</th>
                    <th style="width:10%">Total</th>
                    <th style="width:20%">Review</th>
                </tr>
                </thead>
                <tbody class="align-middle">

                @if (order != null)
                {
                    foreach (var item in order.Items)
                    {
                        @await Html.PartialAsync("~/Views/Partial/Order/OrderItemDetail.cshtml", item)
                    }
                }
                </tbody>
            </table>
        </div>
    </div>

</div>